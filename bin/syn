#!/bin/bash 
# Take control of client by starting a synergy server,
# then ssh to client and connect to the synergy server from it.

client=$1
self=`hostname`

xx() {
  killall synergys
}
trap 'xx' SIGINT

synergys -c $HOME/.dotfiles/conf/.synergyrc
ssh -vvv $client synergyc --no-daemon $self 

# wait for quit command, then close connection from the client as well
sleep 36000
