[user]
	name = Dag Einar Monsen
	email = EMAIL
[core]
	autocrlf = false
	whitespace = fix,space-before-tab,tab-in-indent,trailing-space
	excludesfile = ~/.dotfiles/conf/.gitignore
[alias]
	br = branch
	ci = commit
	co = checkout
	df = diff
  dt = difftool
	g = grep -I
	lg = log --graph --date=short --pretty=format:'%Cgreen(%cr) %C(blue)<%an> %Creset%s %C(yellow)%d %C(red)%h'   
	rb = rbranch
	rv = review
	st = status
	ksdiff = difftool -y -t Kaleidoscope
	pp = "!\"echo Pull; git pull; echo Push; git push\""
  root = !pwd
[apply]
	whitespace = fix
[push]
	default = simple
# reuse recorded resolution when resolving conflicts
[rerere]
	enabled = 1

#### COLORS 
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

#### DIFF & MERGETOOLS
[diff]
	tool = Kaleidoscope
[merge]
	tool = Kaleidoscope
	log = true
[difftool]
	prompt = false
[mergetool]
	prompt = false
# Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
# Kdiff3
[difftool "kdiff3"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$LOCAL\" \"$REMOTE\"
[mergetool "kdiff3"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true
